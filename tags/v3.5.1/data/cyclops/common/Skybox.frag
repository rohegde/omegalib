///////////////////////////////////////////////////////////////////////////////////////////////////
uniform samplerCube unif_CubeMap;
varying vec3 var_ReflectDir;

///////////////////////////////////////////////////////////////////////////////////////////////////
void main (void)
{
	vec4 color;

	//Cubemap
	color = vec4(textureCube(unif_CubeMap, var_ReflectDir));
	gl_FragColor = clamp(color,0.0,1.0);
}