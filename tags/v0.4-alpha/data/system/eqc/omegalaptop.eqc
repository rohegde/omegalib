#Equalizer 1.0 ascii
# Test omegadesk configuration running on a laptop HD screen.

global
{
    EQ_CONFIG_FATTR_EYE_BASE        0.06
    EQ_WINDOW_IATTR_PLANES_STENCIL ON
}

server
{
    config
    {
        appNode											
        {
            
            pipe									#Bottom Window
            {
                name "GPU 1"
                window
                {
                    name     "bottom"
                    viewport [ 0 480 854 480 ]
                    channel { name "bottom"  }
                }
                window
                {
                    name     "top"
                    viewport [ 0 0 854 480 ]
                    channel 
                    { 
						viewport [0 0 .5 1]
						name "topleft"  
					}
                    channel 
                    { 
						viewport [.5 0 .5 1]
						name "topright"  
					}
                }
            }
        }

		observer 
		{ 
			name "observer0" 
		}

        # Layouts - one for each demo mode
        layout
        {
            name "MultiView"
            view
            {
                name "bottom"
				observer "observer0"                
                viewport [ 0 0 1 .5 ]
            }
            view
            {
                name "top"
                observer "observer0"
                viewport [ 0 .5 1 .5 ]
            }
        }

        # Canvas using all layouts
        canvas
        {
            layout "MultiView"

            segment
            {
                viewport [ 0 0 1 .5 ]
                channel "bottom"
				wall
				{
						bottom_left  [ -.7 -0.4 0 ]
						bottom_right [  .7 -0.4 0 ]
						top_left     [ -.7 0.4 0 ]
				}
            }
            segment
            {
                viewport [ 0 .5 1 .5 ]
                channel "topleft"
				wall
				{
						bottom_left  [ -.7 -0.4 0 ]
						bottom_right [  .7 -0.4 0 ]
						top_left     [ -.7 0.4 0 ]
				}
            }
            segment
            {
                viewport [ 0 .5 1 .5 ]
                channel "topright"
				wall
				{
						bottom_left  [ -.7 -0.4 0 ]
						bottom_right [  .7 -0.4 0 ]
						top_left     [ -.7 0.4 0 ]
				}
            }
        }

        # wall compound - need swap barrier
        compound
        {
            compound
            {
                channel ( segment 0 layout "MultiView" view 0 )
            }
            compound
            {
				eye [ LEFT ]
                channel ( segment 1 layout "MultiView" view 1 )
            }
            compound
            {
				eye [ RIGHT ]
                channel ( segment 2 layout "MultiView" view 1 )
            }
        }
    }
}
