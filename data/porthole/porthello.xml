<gui>
  
  <gui_elements>
    
    <gui_element id="element1" type="HTML">
      <div class="div-aligned">
        <fieldset  data-type="horizontal" class="">
          <!--<input type="button" id="TestButton" name="PythonTEST" value="PythonTEST" data-role="button" onclick="print('>>Hello python')" />-->
          <input type="button" value="UP" data-role="button" onmousedown="up(event)" data-inline="true" data-corner="false" class=""/>
          <input type="button" value="DOWN" data-role="button" onmousedown="down(event)" data-inline="true" data-corner="false" class=""/>
          <input type="button" value="LEFT" data-role="button" onmousedown="left(event)" data-inline="true" data-corner="false" class=""/>
          <input type="button" value="RIGHT" data-role="button" onmousedown="right(event)" data-inline="true" data-corner="false" class=""/>
        </fieldset>
      </div>
    </gui_element>
    
    <gui_element id="element2" type="googlemap" />
    
    <gui_element id="element3" type="camera_stream" camera="custom"/>
    
  </gui_elements>
  
  <gui_disposition>

    <small minWidth="0" minHeight="0">
      <portrait>
        <element3 width="100%" height="100%" />
      </portrait>
      <landscape>
        <element3 width="100%" height="100%" />
      </landscape>
    </small>
    
    <medium minWidth="320" minHeight="470">
      <portrait>
        <element1 width="100%" height="10%" />
        <element3 width="100%" height="90%" />
      </portrait>
      <landscape>
        <element3 width="100%" height="100%" />
      </landscape>
    </medium>
    
    <large minWidth="480" minHeight="640">
      <portrait>
        <element1 width="100%" height="10%" />
        <element3 width="100%" height="90%" />
      </portrait>
      <landscape>
        <element3 width="100%" height="100%" />
      </landscape>   
    </large>
    
    <xlarge minWidth="720" minHeight="960">
      <portrait>
        <element1 width="100%" height="10%" />
        <element3 width="100%" height="90%" />
      </portrait>
      <landscape>
        <element3 width="100%" height="100%" />
      </landscape>
    </xlarge>
    
  </gui_disposition>
  
</gui>