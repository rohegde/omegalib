#Equalizer 1.0 ascii

# four-window configuration showing all Equalizer features
global
{
    EQ_WINDOW_IATTR_PLANES_STENCIL ON
    EQ_COMPOUND_IATTR_STEREO_MODE ANAGLYPH
}

server
{
    config
    {
        appNode
        {
            pipe
            {
                name "GPU 1"
                window
                {
                    name     "window1"
                    viewport [ 0 0 500 500 ]
                    channel { name "channel2"  }
                }
                window
                {
                    name     "window2"
                    viewport [ 500 0 500 500 ]
                    channel { name "channel1"  }
                }
                window
                {
                    name     "window3"
                    viewport [ 0 500 500 500 ]
                    channel { name "channel4"  }
                }
                window
                {
                    name     "window4"
                    viewport [ 500 500 500 500 ]
                    channel { name "channel3"  }
                }
            }
        }

        observer { name "observer1" }
        
        # Layouts - one for each demo mode
        layout
        {
            name "MultiView"
            view
            {
                name "view3D"
                observer "observer1"
                
                viewport [ 0 0 1 1 ]
            }
        }

        # Canvas using all layouts
        canvas
        {
            layout "MultiView"

			wall
			{
					bottom_left  [ -.5074 1.2 -0.8128 ]
					bottom_right [  .5106 1.2 -0.8128 ]
					top_left     [ -.5074 1.80 -0.8128 ]
			}

            segment
            {
                viewport [ 0 0 0.5 0.5 ]
                channel "channel1"
            }
            segment
            {
                viewport [ 0.5 0 0.5 0.5 ]
                channel "channel4"
            }
            segment
            {
                viewport [ 0 0.5 0.5 0.5 ]
                channel "channel3"
            }
            segment
            {
                viewport [ 0.5 0.5 0.5 0.5 ]
                channel "channel2"
            }
        }

        # wall compound - need swap barrier
        compound
        {
            compound
            {
                channel ( segment 0 layout "MultiView" view 0 )
                channel ( segment 1 layout "MultiView" view 0 )
                channel ( segment 2 layout "MultiView" view 0 )
                channel ( segment 3 layout "MultiView" view 0 )
            }
        }
    }
}
