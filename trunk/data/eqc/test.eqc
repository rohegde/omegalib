#Equalizer 1.0 ascii

# four-window configuration showing all Equalizer features
global
{
    EQ_WINDOW_IATTR_PLANES_STENCIL ON
    EQ_COMPOUND_IATTR_STEREO_MODE ANAGLYPH
}

server
{
    config
    {
        appNode
        {
            pipe
            {
                name "GPU 1"
                window
                {
                    name     "window1"
                    viewport [ 50 50 800 600 ]
                    channel { name "channel1"  }
                }
            }
        }

        observer { name "observer1" }
        
        # Layouts - one for each demo mode
        layout
        {
            name "MultiView"
            view
            {
                name "view3D"
                observer "observer1"
                
                viewport [ 0 0 1 1 ]
            }
        }

        # Canvas using all layouts
        canvas
        {
            layout "MultiView"

			wall
			{
					bottom_left  [ -.4074 1.16 -0.8128 ]
					bottom_right [  .6106 1.16 -0.8128 ]
					top_left     [ -.4074 1.80 -0.8128 ]
			}

            segment
            {
                viewport [ 0 0 1 1 ]
                channel "channel1"
            }
        }

        # wall compound - need swap barrier
        compound
        {
            compound
            {
                channel ( segment 0 layout "MultiView" view 0 )
            }
        }
    }
}
